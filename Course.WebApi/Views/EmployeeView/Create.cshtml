
@model Course.WebApi.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="EmployeeView"
      asp-action="Create"
      method="post" 
      class="form-group m-auto w-25">

    <label for="Name">Name:</label>
    <input asp-for="Name"
           name="Name"
           type="text"
           id="Name"
           placeholder="input name"
           class="form-control"/>
    <label for="Salary">Salary:</label>
    <input asp-for="Salary"
           name="Salary"
           type="text"
           id="Salary"
           placeholder="input salary"
           class="form-control"/>

    <input type="submit" class="btn btn-primary" value="Submit" />
</form>
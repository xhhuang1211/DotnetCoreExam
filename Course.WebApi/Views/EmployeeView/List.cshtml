

@model IEnumerable<Course.WebApi.Models.Employees>

@{
    ViewData["Title"] = "Employees in MyCompany";
}

<a href="#" class="btn btn-dark text-light mb-2">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                name
            </th>
            <th>
                salary
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.name
                </td>
                <td>
                    @item.salary
                </td>
                <td>
                    <a asp-controller="EmployeeView" asp-action="Create" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="EmployeeView" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>